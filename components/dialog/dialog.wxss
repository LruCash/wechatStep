.rootContainer {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.popContainer {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 80%;
  border-radius: 15rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%);
  overflow: hidden;
  background: white;
  display: flex;
  flex-direction: column;
  align-items: center;
}

