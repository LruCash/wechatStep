.wx-popup {
  position: absolute;
  left: 0;
  top: 0;

  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}

.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;

  width: 80%;
  max-width: 600rpx;
  border-radius: 10rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: white;
}

.pop_content{
  margin: 30rpx;
  display: flex;
  flex-direction: column;
}

.close_view{
  display: flex;
  margin-right: 30rpx;
  justify-content: flex-end;
}

.title_tv{
  text-align: center;  
  margin-bottom: 40rpx;
}

.tip_tv{
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 31rpx;
  margin-bottom: 20rpx;
}

.tip_three{
  margin-bottom: 30rpx;
}
