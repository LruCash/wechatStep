.rootContainer {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.content {
  display: flex;
  position: relative;
  width: 100%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.header_iv{
  z-index: 2;
}
.popContainer{
  width: 88%;
  margin-top:-50rpx;
  background: white;
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}


.coin_tv {
  font-size: 30rpx;
  margin-top: 100rpx;
}

.double_tv {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 70rpx;
  border-radius: 35rpx;
  background: #fb4a42;
  font-size: 26rpx;
  color: white;
  width: 360rpx;
}

.sure_tv {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 70rpx;
  font-size: 26rpx;
  margin-top: 80rpx;
  background: #FB4A42;
  color: white;
  width: 360rpx;
  border: solid 2rpx #9e9e9e;
  border-radius: 35rpx;
  margin-bottom: 80rpx;
}

.banner_ad {
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}


