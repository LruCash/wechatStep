page {
  height: 100%;
}

.root {
  width: 100%;
  height: 100%;
  position: relative;
}

.background-image {
  height: 100%;
  position: absolute;
  width: 100%;
  left: 0px;
  top: 0px;
}

.content {
  display: flex;
  flex-direction: column;
  position: absolute;
  width: 100%;
  height: 100%;
}

.step_view{
  position: relative;
  margin-top: 100rpx;
  display: flex;
  justify-content: center;
}

.wechat_step{
  position: absolute;
  bottom: 90rpx;
  left: 210rpx;
  color: white;
}

.step_walk{
  display: flex;
  margin-top: 40rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.step_one{
  font-size: 36rpx;
  font-stretch: expanded;
}

.step_two{
  margin-top: 15rpx;
  font-size: 24rpx;
}

.sync_view {
  margin-top: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tip_view {
  display: flex;
  margin-top: 5rpx;
  flex-direction: row;
  justify-content: space-between;
}

.sync_bt{
  background: transparent;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sync_bt::after{
  border: none;
}

.method_view {
  display: flex;
  margin-left: 50rpx;
  flex-direction: row;
  background: transparent;
  align-items: center;
}

.question_view{
  margin-right: 50rpx;
  display: flex;
  flex-direction: row;
  background: transparent;
  align-items: center;
  justify-content: center;
}

.question_view::after{
  border: none;
}

.method_view::after{
  border: none;
}

.tip_iv {
  width: 45rpx;
  height: 45rpx;
}

.tip_tv {
  justify-content: center;
  font-size: 26rpx;
  margin-left: 7rpx;
  background-color: transparent;
  border: 0rpx;
  border-radius: 0rpx;
  color: #A699FD;
}
