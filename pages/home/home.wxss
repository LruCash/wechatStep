.root_view {
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction: column;
}

.header_view {
  width: 100%;
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
}

.circle_view {
  display: flex;
  align-items: center;
  position: relative;
  flex-direction: column;
}

.title_step {
  position: absolute;
  font-size: 30rpx;
  color: black;
  top: 100rpx;
}

.step_count {
  position: absolute;
  font-size: 60rpx;
  color: black;
  top: 170rpx;
  font-weight: 600;
}

.read_bt {
  position: absolute;
  bottom: -45rpx;
}

.first_coin {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 50rpx;
  left: 50rpx;
  align-items: center;
}

.first_coin_num{
  padding-top: 5rpx;
  font-size: 27rpx;
}

.second_coin_num{
  padding-top: 5rpx;
  font-size: 27rpx;
}

.second_coin {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  right: 50rpx;
  top: 100rpx;
}

.tip_1 {
  margin-top: 90rpx;
  font-size: 30rpx;
  font-weight: 600rpx;
  align-self: center;
}

.tip_2 {
  margin-top: 15rpx;
  font-size: 22rpx;
  color: #aeaeae;
  align-self: center;
}

.sync_bt {
  margin-top: 60rpx;
  align-self: center;
}

.function_view {
  width: 60%;
  display: flex;
  flex-direction: row;
  align-self: center;
  justify-content: space-between;
}

.sync_method_view {
  display: flex;
  margin-left: 40rpx;
  align-items: center;
}

.contact_view {
  padding: 0rpx;
  margin-left: 0rpx;
  background: transparent;
}

.contact_view::after{
  border: none;
}

.contact_container{
  display: flex;
  flex-direction: row;
  margin-right: 40rpx;
  align-items: center;
  justify-content: flex-end;
}

.function_view text {
  font-size: 25rpx;
  padding-left: 15rpx;
}

.adContainer {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
}
